<?xml version="1.0" encoding="utf-8"?>


<LinearLayout android:layout_width="match_parent"
    android:background="@drawable/back"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:layout_editor_absoluteX="8dp"
    tools:layout_editor_absoluteY="8dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center"
        android:text="Scopus"
        android:textColor="#fff"
        android:textDirection="rtl"
        android:textSize="35dp" />

    <TextView
        android:textStyle="bold"
        android:background="@drawable/txt_back"
        android:layout_width="match_parent"
        android:backgroundTint="#008B8B"
        android:text="جستجو مقالات در سرویس ها"
        android:layout_margin="10dp"
        android:textColor="#fff"
        android:textSize="20dp"
        android:textDirection="rtl"
        android:gravity="center"
        android:layout_height="wrap_content" />
    <TextView
        android:backgroundTint="#F44336"
        android:background="@drawable/txt_back"
        android:layout_width="match_parent"
        android:text="امکان مقایسه کشور ها "
        android:layout_margin="10dp"
        android:textColor="#fff"
        android:textSize="20dp"
        android:textDirection="rtl"
        android:gravity="center"
        android:layout_height="wrap_content" />

    <TextView
        android:textStyle="bold"
        android:backgroundTint="#4CAE4C"
        android:background="@drawable/txt_back"
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text="دسترسی لحظه ای و آنلاین "
        android:textColor="#fff"
        android:textDirection="rtl"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/imgLoading"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:src="@drawable/loading" />

</LinearLayout>